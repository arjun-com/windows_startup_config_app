# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf
*.md text eol=lf

# Documentation
*.txt text eol=lf
README.md text eol=lf
LICENSE text eol=lf
CHANGELOG.md text eol=lf
CONTRIBUTING.md text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.babelrc text eol=lf
package.json text eol=lf
webpack.config.js text eol=lf

# Windows-specific files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.exe binary
*.dll binary
*.node binary
